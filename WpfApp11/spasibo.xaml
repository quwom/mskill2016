<Page x:Class="WpfApp11.spasibo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp11"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="spasibo">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock TextWrapping="Wrap" Width="500" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20">Спасибо за вашу регистрацию в качестве бегуна!</TextBlock>
        <TextBlock TextWrapping="Wrap" Width="500" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" >Спасибо за вашу регистрацию в качестве бегуна в MARATHON SKILLS 2016!</TextBlock>
        <TextBlock TextWrapping="Wrap" Width="500" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" >С вами свяжутся по поводу оплаты.</TextBlock>
        <Button Grid.Row="3" Content="ОК" Click="Button_Click" Height="50" Width="150"/>
    </Grid>
</Page>
